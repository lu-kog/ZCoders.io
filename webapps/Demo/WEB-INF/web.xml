<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Define servlets and servlet mappings -->
    <servlet>
        <servlet-name>GuessTheNumberServlet</servlet-name>
        <servlet-class>com.yourcompany.servlets.GuessTheNumberServlet</servlet-class>
    </servlet>
    
    <!-- Map servlets to URL patterns -->
    <servlet-mapping>
        <servlet-name>GuessTheNumberServlet</servlet-name>
        <url-pattern>/GuessTheNumberServlet</url-pattern>
    </servlet-mapping>



    <!-- Welcome page configuration (optional) -->
    <welcome-file-list>
        <welcome-file>guess-the-number.jsp</welcome-file>
        <!-- Add other welcome files if needed -->
    </welcome-file-list>
</web-app>
